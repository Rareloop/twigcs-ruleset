<?xml version="1.0"?>
<ruleset name="Roots">
  <description>Rareloop Coding Standards</description>

  <!-- Scan all files in directory -->
  <file>src</file>

  <!-- Scan only PHP files -->
  <arg name="extensions" value="php"/>

  <exclude-pattern>vendor/</exclude-pattern>

  <!-- Show colors in console -->
  <arg value="-colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="ns"/>

  <!-- Use PSR-2 as a base -->
  <rule ref="PSR2"/>
</ruleset>
